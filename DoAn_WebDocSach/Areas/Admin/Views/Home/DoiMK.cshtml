
@{
    ViewBag.Title = "DoiMK";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<html>
<head>
    <style type="text/css">
        .grid-footer {
            color: #000;
            font: 17px Calibri;
            text-align: center;
            font-weight: bold;
        }
        .table thead th {
            text-align: center;
        }

            .grid-footer a {
                background-color: #ffffff;
                color: blue;
                box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                padding: 1px 10px 2px 10px;
            }

        .alternatingRowStyle {
            background-color: aliceblue;
        }

        table .table1 {
            text-align: left;
            margin-left: 0px;
            margin-right: 0px;
            width: 800px;
        }

        .tr, .td {
            text-align: left;
        }

        .TieuDe {
            font-size: 24px;
            font-weight: bold;
            color: #333;
            text-align: center;
            margin-top: 20px;
            margin-bottom: 10px;
            text-shadow: 1px 1px 1px rgba(0,0,0,0.1);
        }

        .nutBam {
            text-align: center;
            margin: 10px;
        }
        td {
            padding: 10px;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm("DoiMK", "Home", FormMethod.Post))
    {
        <h3 class="TieuDe">ĐỔI MẬT KHẨU</h3>
        if (TempData["success_message"] != null)
        {
            <div class="alert alert-success">
                @TempData["success_message"]
            </div>
        }
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <table class="table1" align="center">
            <tr>
                <td>
                    Mật khẩu cũ
                </td>
                <td>
                    <input type="password" name="oldPass" class="form-control form-control-user"
                           id="exampleInputPassword">
                </td>
            </tr>
            <tr>
                <td>
                    Mật khẩu mới
                </td>
                <td>
                    <input type="password" name="newPass" class="form-control form-control-user"
                           id="exampleInputPassword">
                </td>
            </tr>
            <tr>
                <td>
                    Nhập lại mật khẩu mới
                </td>
                <td>
                    <input type="password" name="retypeNewPass" class="form-control form-control-user"
                           id="exampleInputPassword">
                </td>
            </tr>
            <tr>
                <td colspan="2" align="center">
                    <button type="submit" class="btn btn-primary btn-user">
                        Đổi mật khẩu
                    </button>
                </td>
            </tr>
        </table>
    }

    <div>
        @Html.ActionLink("Quay lại", "Index")
    </div>
</body>
</html>