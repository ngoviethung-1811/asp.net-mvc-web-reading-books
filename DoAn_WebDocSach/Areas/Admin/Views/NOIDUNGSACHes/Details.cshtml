@model DoAn_WebDocSach.Models.NOIDUNGSACH

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<head>
    <style>
        table {
            border-collapse: collapse;
            width: 90%;
            font-family: Arial, sans-serif;
            font-size: 14px;
            background-color: #f2f2f2;
        }

        th, td {
            padding: 8px;
            text-align: left;
            margin: 0;
            color: black;
        }

        th {
            padding: 8px;
            background-color: #f2f2f2;
            font-weight: bold;
        }
    </style>
</head>
<h4 style="color:black;text-align:center">Thông tin chi tiết</h4>
<table border="1" cellpadding="0" cellspacing="0" style="font-size:14px;margin-left:50px;">
    <tr>
        <td>
            <table cellpadding="2" cellspacing="10">
                <tr>

                    <td>Mã sách:</td>
                    <td>@Html.DisplayFor(model => model.maSach)</td>
                </tr>
                <tr>
                    <td>Tên sách:</td>
                    <td>@Html.DisplayFor(model => model.SACH.tenSach)</td>
                </tr>
                <tr>
                    <td>Mã chương:</td>
                    <td>@Html.DisplayFor(model => model.maChuong)</td>
                </tr>
                <tr>
                    <td>Tên chương:</td>
                    <td>@Html.DisplayFor(model => model.tenChuong)</td>
                </tr>
                <tr>
                    <td colspan="2" style="vertical-align: top; padding-top: 8px; text-align: center;">Nội dung</td>
                </tr>
                <tr>
                    <td colspan="2" style="padding-left: 100px; vertical-align: top; padding-top: 8px; text-align: justify; font-size:20px ">@Html.Raw(Html.Encode(Model.noiDung).Replace("\n", "<br />"))</td>
                </tr>
            </table>
        </td>
    </tr>
</table>
<p style="margin-left:50px;">
    <br />
    @Html.ActionLink("Cập nhật", "Edit", new { id = Model.maSach, id1 = Model.maChuong }) |
    @Html.ActionLink("Quay lại", "XemNDSach", "SACHes", new { id = Model.maSach }, null)
</p>

