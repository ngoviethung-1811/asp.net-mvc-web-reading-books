@model DoAn_WebDocSach.Models.NOIDUNGSACH

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
}
@using (Html.BeginForm("Create", "NOIDUNGSACHes", new { id = ViewBag.maSach }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Thêm chương mới</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.maSach, "Mã sách", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                <input type="text" value="@ViewBag.maSach" disabled readonly class="form-control" />
                @Html.ValidationMessageFor(model => model.maSach, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.maChuong, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                <input type="text" value="@ViewBag.maChuong" disabled readonly class="form-control" />
                @Html.ValidationMessageFor(model => model.maChuong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tenChuong, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.tenChuong, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tenChuong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.noiDung, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-15">
                @Html.TextAreaFor(model => model.noiDung, new { @class = "form-control", rows = 25, cols = 50 })
                @Html.ValidationMessageFor(model => model.noiDung, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm" class="btn btn-outline-dark" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "XemNDSach", "SACHes", new { id = ViewBag.maSach }, null)
</div>
